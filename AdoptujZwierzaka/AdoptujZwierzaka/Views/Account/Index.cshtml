@model IQueryable<Pet>
@{
    ViewBag.Title = "Wszystkie Zwierzeta";
    Layout = "_AccountLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Zwierze</th>
        <th>Miasto</th>
        <th>Opis</th>
        <th>Data Dodania</th>
        <th class="text-right">Kategoria</th>
        <th class="text-center">Akcje</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.ID</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Description</td>
            <td>@item.AddDate</td>
            <td class="text-right">@item.Category</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-petId="@item.ID"> Edytuj </a>
                    <input type="hidden" name="ID" value="@item.ID" />
                    <button type="submit" class="btn btn-danger btn-sm"> Usuń </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Dodaj produkt</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Powrót</a>
</div>
