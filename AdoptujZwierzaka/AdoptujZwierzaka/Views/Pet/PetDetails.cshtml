@model Pet
<!-- Page Content -->
<div class="container">
    <!-- Portfolio Item Row -->
    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid dog-picture rounded border border-dark" src="~/images/@Model.Picture" alt="">
        </div>

        <div class="col-md-4">
            <h1 class="my-4 ">
                @Model.Name
                <small>@Model.City</small>
            </h1>
            <h3 class="my-3">Opis</h3>
            <p>@Model.Description</p>
            <h3 class="my-3">Informacje</h3>
            <ul>
                <li>Aktywność: @Model.Activity</li>
                <li>Wiek: @Model.Age</li>
                <li>
                    Płeć:
                    @if (Model.Sex == false)
                    {
                        <img height="20" width="20" src="~/images/Women.png" />
                    }
                    else
                    {
                        <img height="20" width="20" src="~/images/Men.png" />
                    }
                </li>
                <li>
                    Status:
                    @if (Model.Status == false)
                    {
                        <a>Czeka na adopcje <img height="25" width="25" src="~/images/accept.png" /></a>
                    }
                    else
                    {
                        <a>Zarezerwowany <img height="25" width="25" src="~/images/cancel.png" /></a>
                    }
                </li>
            </ul>
            <a asp-controller="Pet" asp-action="List" class="btn btn-success">Powrót</a>
        </div>

    </div>
    <!-- /.row -->
</div>