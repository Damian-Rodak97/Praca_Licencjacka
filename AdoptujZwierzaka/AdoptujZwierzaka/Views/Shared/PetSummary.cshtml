@model Pet
<div class="col-md-6 col-lg-3">
    <div class="xs-single-children">
        <div class="xs-children-header">
            <span class="badge badge-secondary badge-pill">@Model.Category</span>
            <img src="~/images/@Model.Picture" alt="">
        </div>
        <div class="xs-children-details">
            <a asp-action="PetDetails" asp-route-petId="@Model.Id">@Model.Name</a>
            <h5>@Model.City</h5>
        </div>
    </div>
</div>
