<body>
    <!-- header section -->
    <header class="xs-header xs-nav-box">
        <div class="xs-logo-area">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 xs-logo-wraper">
                        <a class="nav-brand" asp-controller="Pet" asp-action="List">
                            <img src="~/assets/images/logo.png" alt="">
                        </a>
                    </div><!-- .xs-logo-wraper END -->
                    <div class="col-md-7 row xs-header-widget no-mobile">

                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
        @if (SignInManager.IsSignedIn(User))
        {
            <div class="xs-nav-down nav-down">
                <div class="container">
                    <nav class="xs-menus">
                        <div class="nav-header">
                            <div class="nav-toggle"></div>
                            <a href="index.html" class="nav-logo">
                                <img src="assets/images/logo.png" alt="">
                            </a>
                        </div>
                        <div class="nav-menus-wrapper">
                            <ul class="nav-menu">
                                <li><a asp-area="" asp-controller="Account" asp-action="Index">Add Ad</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a></li>
                                <li><form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})"><button type="submit" class="btn btn-secondary btn-success"></button></form></li>
                            </ul><!-- .nav-menu END -->
                        </div><!-- .nav-menus-wrapper .row END -->
                    </nav>
                </div>
            </div>
        }
        else
        {
            <div class="xs-nav-down nav-down">
                <div class="container">
                    <nav class="xs-menus">
                        <div class="nav-header">
                            <div class="nav-toggle"></div>
                            <a href="index.html" class="nav-logo">
                                <img src="assets/images/logo.png" alt="">
                            </a>
                        </div>
                        <div class="nav-menus-wrapper">
                            <ul class="nav-menu">
                                <li><a asp-area="" asp-controller="Pet" asp-action="List" asp-route-category="Pies">Psy do adopcji</a></li>
                                <li><a asp-area="" asp-controller="Pet" asp-action="List" asp-route-category="Kot">Koty do adopcji</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Register">Rejestracja</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Login">Zaloguj</a></li>
                            </ul><!-- .nav-menu END -->
                        </div><!-- .nav-menus-wrapper .row END -->
                    </nav>
                </div>
            </div>
        }
    </header><!-- End header section -->
    <!-- banner section -->
    <section class="xs-banner xs-bg" style="background-image: url('assets/images/header.jpg')">
        <div class="container">
            <div class="row xs-banner-wraper">
                <div class="col-md-12">
                    <div class="xs-banner-content">
                        <h1 class="xs-banner-title">Adoptuj zwierzaka fizycznie lub wirtualnie</h1>
                        <p class="lead">Ponad 140 zwierzaków czeka na Twoje wsparcie. Adoptuj zwierzaki w schronisku lub wspieraj je zdalnie.</p>
                    </div><!-- .xs-banner-content END -->
                </div>
            </div><!-- .row END -->
        </div><!-- .container END -->
    </section><!-- End banner section -->
    <div class="container-fluid">
        <div class="search_welcome">
            <form action="/zwierzeta-do-adopcji" method="GET" class="form-inline">
                <input class="form-control tippy-click ui-autocomplete-input" id="pet_town" type="search" placeholder="Cała Polska lub wpisz miasto" aria-label="Search" name="pet_town" data-tippy-content="Wpisz miasto, np. Warszawa" autocomplete="off">
                <button class="btn btn-outline-success" type="submit" name="pet_type" value="1">
                    <i class="flaticon flaticon-dog"></i>
                    Znajdź psa
                </button>
                <button class="btn btn-outline-success" type="submit" name="pet_type" value="2">
                    <i class="flaticon flaticon-cat"></i>
                    Znajdź kota
                </button>
            </form>
        </div>
    </div>


