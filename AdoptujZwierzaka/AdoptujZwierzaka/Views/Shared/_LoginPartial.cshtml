@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="xs-navs-button">
    <ul class="nawigacja">
        @if (SignInManager.IsSignedIn(User))
        {
            <li>
                <a asp-area="" asp-controller="Find" asp-action="Index">Zwierzęta do adopcji</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Account" asp-action="Index">Moje schronisko</a>
            </li>
            <li>
                <div class="dropdown">
                    <a class="dropdown-toggle text-white" type="button" id="Profil" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Profil
                    </a>
                    <div class="dropdown-menu" aria-labelledby="Profil">
                        <a class="dropdown-item" style="color: black" asp-area="Identity" asp-page="/Account/Manage/Index">Zmień dane</a>
                        <a class="dropdown-item" style="color: black" asp-area="Identity" asp-page="/Account/Manage/Email">Zmień e-mail</a>
                        <a class="dropdown-item" style="color: black" asp-area="Identity" asp-page="/Account/Manage/SetPassword">Zmień hasło</a>
                    </div>
                </div>
            </li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("List", "Pet", new {area = ""})">
                    <button type="submit" class="btn btn-secondary btn-success">Wyloguj</button>
                </form>
            </li>
        }
        else
        {
            <li>
                <a asp-area="" asp-controller="Find" asp-action="Index" asp-route-category="Pies">Psy do adopcji</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Find" asp-action="Index" asp-route-category="Kot">Koty do adopcji</a>
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
            </li>
            <li>
                <a class="btn btn btn-secondary" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
            </li>
        }
    </ul>
</div>
